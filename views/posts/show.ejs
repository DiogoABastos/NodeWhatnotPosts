<div class="row">
  <div class="col s12 m8">
    <h3>
      <%= post.title %>
      <small><%- editIcon(post.user, user, post._id, floating = false) %></small>
    </h3>
    <div class="card">
      <div class="card-content">
        <%- post.body %>
      </div>
    </div>
  </div>
  <div class="col s12 m4">
    <div class="card">
      <div class="card-content center-align">
        <h3><%= post.user.firstName %> <%= post.user.lastName %></h3>
      </div>
      <div class="card-action center-align">
        <a href="/posts/user/<%= post.user._id %>">Read More</a>
      </div>
    </div>
  </div>
</div>
