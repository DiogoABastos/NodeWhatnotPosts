<h3><i class="fab fa-node-js"></i> Register</h3>
<div class="section">
  <%- include('./partials/messages') %>
</div>
<div class="section">
  <form action="/users/register" method="POST" autocomplete="off">
    <div class="row">
      <div class="input-field col s6">
        <label for="first">First Name</label>
        <input type="text" id="first" name="first" placeholder="Type your First Name..." value="<%= typeof first != 'undefined' ? first : '' %>" class="validate">
      </div>
      <div class="input-field col s6">
        <label for="last">Last Name</label>
        <input type="text" id="last" name="last" placeholder="Type your Last Name..." value="<%= typeof last != 'undefined' ? last : '' %>" class="validate">
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" placeholder="Type your email..." value="<%= typeof email != 'undefined' ? email : '' %>" class="validate">
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Type your password..." value="<%= typeof password != 'undefined' ? password : '' %>" class="validate">
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <label for="password2">Confirm Password</label>
        <input type="password" id="password2" name="password2" placeholder="Type your password..." value="<%= typeof password2 != 'undefined' ? password : '' %>" class="validate">
      </div>
    </div>
    <div class="section">
      <button class="btn red darken-2" type="submit">Register</button>
    </div>
  </form>
  <p>Already have an account?<a href="/users/login"> Login</a></p>
</div>
